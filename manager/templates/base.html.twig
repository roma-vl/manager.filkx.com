<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title inertia>My Inertia App</title>
    <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">
</head>
<body>
<div id="app" data-page='{{ page|json_encode|e('html_attr') }}'></div>

{% if app.debug %}
    <script type="module" src="http://localhost:5173/build/js/app.js"></script>
{% else %}
    <link rel="stylesheet" href="{{ asset('build/assets/css/app.css') }}">
    <script type="module" src="{{ asset('build/assets/js/app.js') }}"></script>
{% endif %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>

